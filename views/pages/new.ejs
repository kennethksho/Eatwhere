      width: 150px;
      height: 100px;
      object-fit: cover;
      border-radius: 8px;
    }
    .restaurant-info {
      flex-grow: 1;
    }
    .restaurant-name {
      font-size: 1.2rem;
      font-weight: bold;
    }
    .highlight {
      background-color: #fff3cd;
      border-left: 5px solid #ffc107;
      padding: 0.5rem;
      margin-bottom: 1rem;
    }
    .submission-form {
      margin-top: 3rem;
      background: #fff;
      padding: 1rem;
      border-radius: 8px;
      border: 1px solid #ddd;
    }
    footer {
      text-align: center;
      padding: 1rem;
      background: #eee;
      animation: fadeInUp 1.5s ease;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    @keyframes fadeInUp {
      from { transform: translateY(20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    @keyframes fadeInDown {
      from { transform: translateY(-20px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
  </style>
