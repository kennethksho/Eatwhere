<body>
  <header>
    <h1>Explore Eateries üç¥</h1>
    <p>Find the best spots recommended this month</p>
  </header>
  <nav>
    <a href="/">Home</a>
    <a href="/explore">Explore</a>
    <a href="/about">About</a>
  </nav>

  <div class="container">
    <div class="filters">
      <select id="filter-location">
        <option value="">All Locations</option>
      </select>
      <button onclick="filterByLocation()">Search</button>
    </div>

    <div class="section">
      <h2>üÜï Latest Eateries This Month</h2>
      <div class="restaurant-card">
        <img src="https://scontent-sin6-2.cdninstagram.com/v/t51.29350-15/438609456_436446745542259_7575101981278915309_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=18de74&_nc_ohc=WlxtQuOIlZIQ7kNvgEaJRWy&_nc_ht=scontent-sin6-2.cdninstagram.com&edm=AL-3X8kEAAAA&oh=00_AYAobq2D-mc8ybrFne7EqMmJuyXakXcBr1ef9FYITFgBKw&oe=6652C574" alt="Sushi Zushi SG">
        <div class="restaurant-info">
          <div class="restaurant-name">Sushi Zushi SG</div>
          <p>Japanese ‚Ä¢ Halal: No ‚Ä¢ Vegetarian: Yes</p>
          <p>Location: Tanjong Pagar ‚Ä¢ Price: $$ ‚Ä¢ Distance: 600m</p>
          <p><strong>Review:</strong> Great sushi selection and fresh taste!</p>
          <a href="https://www.instagram.com/sushizushisg/?hl=en" target="_blank">View Instagram</a>
        </div>
      </div>
    </div>

    <div class="section">
      <h2>üì• Submit Your Favourite Eatery</h2>
      <form id="submit-form">
        <input type="text" placeholder="Name" name="name" required />
        <input type="text" placeholder="Cuisine" name="cuisine" required />
        <input type="text" placeholder="Location" name="location" required />
        <input type="text" placeholder="Price" name="price" required />
        <input type="url" placeholder="Image URL" name="image" />
        <textarea name="review" placeholder="Your review" rows="4" required></textarea>
        <button type="submit">Submit</button>
      </form>
      <div id="submit-message"></div>
    </div>

    <div class="section">
      <h2>üìã User Submitted Eateries</h2>
      <div id="user-submissions"></div>
    </div>
  </div>

  <footer>
    &copy; 2025 EatWhere.Food. All rights reserved.
  </footer>

  <script>
    async function fetchLocations() {
      const res = await fetch('/api/locations');
      const data = await res.json();
      return [...new Set(data.map(r => r.location))];
    }

    async function filterByLocation() {
      const location = document.getElementById("filter-location").value;
      const res = await fetch('/api/restaurants');
      const data = await res.json();
      const filtered = location ? data.filter(r => r.location === location) : data;
      renderSubmissions(filtered);
    }

    function renderSubmissions(data) {
      const container = document.getElementById("user-submissions");
      container.innerHTML = "";
      data.forEach(r => {
        const div = document.createElement("div");
        div.className = "restaurant-card";
        div.innerHTML = `
          <img src="${r.image || 'https://via.placeholder.com/150'}" alt="${r.name}">
          <div class="restaurant-info">
            <div class="restaurant-name">${r.name}</div>
            <p>${r.cuisine}</p>
            <p>Location: ${r.location} ‚Ä¢ Price: ${r.price}</p>
            <p><strong>Review:</strong> ${r.review}</p>
          </div>
        `;
        container.appendChild(div);
      });
    }

    async function loadLocations() {
      const locations = await fetchLocations();
      const select = document.getElementById("filter-location");
      locations.forEach(loc => {
        const opt = document.createElement("option");
        opt.value = loc;
        opt.text = loc;
        select.appendChild(opt);
      });
    }

    document.getElementById("submit-form").addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());

      const res = await fetch('/api/submit', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (res.ok) {
        document.getElementById("submit-message").innerText = "Thanks for your submission!";
        e.target.reset();
        filterByLocation(); // reload user submissions
      } else {
        document.getElementById("submit-message").innerText = "Error submitting data.";
      }
    });

    window.onload = async () => {
      await loadLocations();
      await filterByLocation();
    }
  </script>
</body>
</html>
